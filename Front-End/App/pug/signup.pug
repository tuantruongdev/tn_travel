doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title SignUp
        link(rel="shortcut icon", href="./assets/images/banner.png", type="image/x-icon") 
        link(rel="stylesheet", href="./assets/styles/reset.css")
        script(src='https://kit.fontawesome.com/3fc531ce88.js' crossorigin='anonymous')
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
        script(src='https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js' integrity='sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB' crossorigin='anonymous')
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js' integrity='sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13' crossorigin='anonymous')
        script(src='https://code.jquery.com/jquery-3.6.0.js' integrity='sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=' crossorigin='anonymous')
        link(rel="stylesheet", href="./assets/styles/signup.css")
    body 
        main
            .container 
                .row.justify-content-center.align-items-center  
                    .col.col-sm-9.col-md-8.col-lg-7.col-xl-6
                        form(action="#" id="signup-form") 
                            h1.mb-4 Đăng ký
                            .mb-3.d-flex.justify-content-between.align-items-center
                                .fullname-wrapper
                                    label(for="fullname" class="form-label") Họ và tên
                                    input(type="text", name="fullname" class="form-control" placeholder="Họ và tên" required)
                                .gender-wrapper
                                    label(for="gender" class="form-label") Giới tính
                                    select#gender(name="gender" class="form-select" required)   
                                        option(value="Nam") Nam 
                                        option(value="Nữ") Nữ
                            .mb-3.d-flex.justify-content-between.align-items-center
                                .dateofbirth-wrapper 
                                    label(for="dateofbirth" class="form-label") Ngày sinh 
                                    input(type="date", name="dateofbirth" class="form-control" required)
                                .phone-wrapper 
                                    label(for="phone" class="form-label") Số điện thoại
                                    input(type="tel", name="phone" class="form-control" placeholder="Phone" required)
                            .mb-3 
                                label(for="email" class="form-label") Địa chỉ email
                                input(type="email" name="email" class="form-control" placeholder="Email" required)
                            .mb-3 
                                label(for="password" class="form-label") Mật khẩu
                                input(type="password" name="password" class="form-control" placeholder="Mật khẩu" required)
                            .mb-5 
                                label(for="confirm-password" class="form-label") Xác nhận mật khẩu
                                input(type="password" name="confirm-password" class="form-control" placeholder="Xác nhận mật khẩu")
                            .mb-5.d-flex.justify-content-between.align-items-center 
                                a.back-link(href="./login.html") Trở lại 
                                button(type="submit") Đăng ký
                            hr.mb-3
                            .d-flex.justify-content-between.align-items-center
                                p Đã có tài khoản 
                                    a.login-link(href="./login.html") Đăng nhập
                                a.home-link(href="index.html")
                                    i.fa-solid.fa-house-chimney
                                    | Trang chủ 
        script(src="./assets/scripts/signup.js") 
        