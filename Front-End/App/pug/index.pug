doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Travel
        link(rel="shortcut icon", href="./assets/images/banner.png", type="image/x-icon") 
        link(rel="stylesheet", href="./assets/styles/reset.css")
        script(src='https://kit.fontawesome.com/3fc531ce88.js' crossorigin='anonymous')
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
        script(src='https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js' integrity='sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB' crossorigin='anonymous')
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js' integrity='sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13' crossorigin='anonymous')
        link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.css' integrity='sha512-wR4oNhLBHf7smjy0K4oqzdWumd+r5/+6QO/vDda76MW5iug4PT7v86FoEkySIJft3XA0Ae6axhIvHrqwm793Nw==' crossorigin='anonymous' referrerpolicy='no-referrer')
        link(rel="stylesheet", href="./assets/styles/home.css")
    body 
        include components/header
        main 
            section.banner 
                .container 
                    .row.justify-content-between 
                        .col-6
                            h1 Ngoài kia là một thế giới rộng lớn, khám phá ngay thôi 
                            p.mb-5 Chúng tôi luôn làm cho khách hàng hài lòng bằng cách cung cấp những dịch vụ tốt nhất có thể <3
                            form.banner__search-bar(action="#" method="GET") 
                                .places-wrapper
                                    label.form-label(for="places") Địa điểm 
                                    select#places(name="places" class="form-select")
                                        option(selected) Hà Nội
                                        option(value='1') SaPa
                                        option(value='2') Nha Trang
                                        option(value='3') Phú Quốc
                                .date-wrapper
                                    label.form-label(for="date") Ngày khởi hành 
                                    input.form-control(type="date" name="date")
                                button(type="submit" ) Tìm kiếm
                                input(type="text" name="search" placeholder="Bạn muốn đi đâu ?" class="form-control")
                        .col-6
                            .banner__img 
                                img(src="./assets/images/banner.png", alt="banner")                       
            section.hot-tours
                .container 
                    .row
                        .col-12
                            h2.section-heading Các tours được yêu thích nhất
                            .list-product 
                                article.tour 
                                    a.tour-image(href="#") 
                                        img.tour__image(src="./assets/images/NhaTrang.jpg", alt="Tour")
                                        p.tour-province
                                            i.fa-solid.fa-location-dot
                                            span.tour__province Nha Trang
                                    .tour-detail
                                        a.tour__name(href="#") Tour Bình Hưng 2N2D: Ninh Chữ - Vịnh Vĩnh Hy - Ngắm San Hô - BBQ Hải Sản
                                        p.tour-time
                                            i.fa-solid.fa-clock
                                            span.tour__time 2 ngày 2 đêm 
                                        ul.tour__overview
                                            li Thưởng Thức BBQ Hải Sản
                                            li Vịnh Vĩnh Hy Tuyệt Đẹp 
                                            li Trải Nghiệm Xe Giường Nằm
                                        h3.tour__price 1.590.000 VND
                                    span.tour__hot Tour bán chạy
                            a.show-all(href="#") Xem tất cả     
            section.tours-first
                .container 
                    .row 
                        .col-12 
                            h2.section-heading Tours SaPa 
                            .list-product 
                                article.tour 
                                    a.tour-image(href="#") 
                                        img.tour__image(src="./assets/images/NhaTrang.jpg", alt="Tour")
                                        p.tour-province
                                            i.fa-solid.fa-location-dot
                                            span.tour__province Nha Trang
                                    .tour-detail
                                        a.tour__name(href="#") Tour Bình Hưng 2N2D: Ninh Chữ - Vịnh Vĩnh Hy - Ngắm San Hô - BBQ Hải Sản
                                        p.tour-time
                                            i.fa-solid.fa-clock
                                            span.tour__time 2 ngày 2 đêm 
                                        ul.tour__overview
                                            li Thưởng Thức BBQ Hải Sản
                                            li Vịnh Vĩnh Hy Tuyệt Đẹp 
                                            li Trải Nghiệm Xe Giường Nằm
                                        h3.tour__price 1.590.000 VND
                            a.show-all(href="#") Xem tất cả
            section.tours-secound
                .container 
                    .row 
                        .col-12 
                            h2.section-heading Tours Phú Quốc 
                            .list-product 
                                article.tour 
                                    a.tour-image(href="#") 
                                        img.tour__image(src="./assets/images/NhaTrang.jpg", alt="Tour")
                                        p.tour-province
                                            i.fa-solid.fa-location-dot
                                            span.tour__province Nha Trang
                                    .tour-detail
                                        a.tour__name(href="#") Tour Bình Hưng 2N2D: Ninh Chữ - Vịnh Vĩnh Hy - Ngắm San Hô - BBQ Hải Sản
                                        p.tour-time
                                            i.fa-solid.fa-clock
                                            span.tour__time 2 ngày 2 đêm 
                                        ul.tour__overview
                                            li Thưởng Thức BBQ Hải Sản
                                            li Vịnh Vĩnh Hy Tuyệt Đẹp 
                                            li Trải Nghiệm Xe Giường Nằm
                                        h3.tour__price 1.590.000 VND
                            a.show-all(href="#") Xem tất cả
            section.places 
                .container 
                    .row
                        .col-12 
                            h2.section-heading
                    .row 
                        .col-8 
                            a.place(href="#")
                                img.place__img(src="./assets/images/PhuQuoc.jpg", alt="Phú Quốc")
                                p.place__name Phú Quốc
                            .sub-places
                                a.place(href="#")
                                    img(src="./assets/images/QuyNhon.png", alt="Quy Nhơn")
                                    p.place__name Quy Nhơn
                                a.place(href="#")
                                    img(src="./assets/images/DaLat.jpg", alt="Đà Lạt")
                                    p.place__name Đà Lạt
                        .col-4 
                            a.place(href="#")
                                img(src="./assets/images/VungTau.png", alt="Vũng Tàu")
                                p.place__name Vũng Tàu
        include components/footer
        script(src='https://code.jquery.com/jquery-3.6.0.js' integrity='sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=' crossorigin='anonymous')
        script(src='https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js' integrity='sha512-XtmMtDEcNz2j7ekrtHvOVR4iwwaD6o/FUJe6+Zq+HgcCsk3kj4uSQQR8weQ2QVj1o0Pk6PwYLohm206ZzNfubg==' crossorigin='anonymous' referrerpolicy='no-referrer')
        script(src="./assets/scripts/home.js") 